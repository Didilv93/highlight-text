{
  "name": "@dspackages/highlight-text",
  "version": "2.2.1",
  "description": "A React component wrapper for highlighting text matches within any children content with customizable styling",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.cjs.json && npm run build:css",
    "build:css": "powershell -Command \"Copy-Item src/index.css dist/index.css\"",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Didilv93/highlight-text.git"
  },
  "keywords": [
    "react",
    "highlight",
    "text",
    "search",
    "component",
    "typescript"
  ],
  "author": "Diego Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Didilv93/highlight-text/issues"
  },
  "homepage": "https://github.com/Didilv93/highlight-text#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.3.2",
    "@vitest/ui": "^4.0.6",
    "jsdom": "^27.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.4.5",
    "vitest": "^4.0.6"
  }
}
